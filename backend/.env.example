# Environment Variables Template
# Copy this file to .env and fill in your actual values
# These variables are configured on Render.com for production deployment

# JWT Secret Key (use a long random string - 64+ characters recommended)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-long-random-jwt-secret-key-here

# MongoDB Connection String from MongoDB Atlas
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database-name?retryWrites=true&w=majority

# Port (Render.com will set this automatically in production)
PORT=5000

